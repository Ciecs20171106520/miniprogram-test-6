<view class="page-body">
  <view class="page-section page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location
    ></map>
  </view>
  <view >
    <button bindtap="getCenterLocation" type="primary">获取位置</button>
    <text hidden="{{ttt}}">当前经度:{{aa}}当前维度:{{bb}}</text>
    <button bindtap="moveToLocation"  type="primary">移动到当前位置</button>
    <text>\n</text>
    <button bindtap="translateMarker" type="primary">移动标注</button>  </view>
</view>